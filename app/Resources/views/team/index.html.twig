{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center">TEAM LIST</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for team in teams %}
            <tr>
                <td>{{ team.name }}</td>
                <td>
                    <a class="btn btn-default btn-sm" href="{{ path('team_show', { 'id': team.id }) }}">show</a>
                    <a class="btn btn-default btn-sm" href="{{ path('team_edit', { 'id': team.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-default" href="{{ path('team_new') }}">Create a new team</a>

{% endblock %}
